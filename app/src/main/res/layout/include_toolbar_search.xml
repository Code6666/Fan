<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_searcher"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/toolbar_btn_right"
        android:layout_width="40dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/search_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/search_bar"
        app:layout_constraintTop_toTopOf="@+id/search_bar">

        <ImageView
            android:id="@+id/iv_right_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:padding="@dimen/dp_8"
            android:scaleType="fitCenter"
            android:src="@mipmap/icon_menu_message" />

        <TextView
            android:id="@+id/tv_send_count"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="top|right"
            android:layout_margin="5dp"
            android:background="@drawable/shape_stroke_circle_red"
            android:elevation="2dp"
            android:gravity="center"
            android:maxLines="1"
            android:padding="1dp"
            android:textColor="@android:color/white"
            android:textSize="7sp"
            android:visibility="gone"
            tools:text="11"
            tools:visibility="visible" />
    </FrameLayout>

    <include
        android:id="@+id/search_bar"
        layout="@layout/include_search"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/toolbar_left_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="@dimen/dp_8"
        android:scaleType="fitCenter"
        android:src="@mipmap/icon_menu_food_kinds"
        app:layout_constraintBottom_toBottomOf="@+id/search_bar"
        app:layout_constraintEnd_toStartOf="@+id/search_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/search_bar" />

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
