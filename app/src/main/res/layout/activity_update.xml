<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:minHeight="400dp"
    android:layout_gravity="center"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:layout_gravity="top"
            android:scaleType="fitXY"
            android:src="@mipmap/update_header" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_40"
            android:background="@drawable/shape_stroke_corner_5dp_white_half_full"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_big_size"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="1.0.1" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:minHeight="@dimen/dp_120"
                android:textColor="@color/text_light_dark"
                android:textSize="@dimen/text_middle_size"
                tools:text="content" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/shape_stroke_corner_5dp_red_full"
                android:text="立即安装"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_middle_size" />


        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/ic_cricle_cross" />

</FrameLayout>

